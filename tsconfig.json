{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],

    "compilerOptions": 
    {
        "baseUrl": "./src",
        "paths": 
        {
            "@components/*": ["components/*"],
            "@data/*": ["data/*"],
            "@layouts/*": ["layouts/*"],
            "@pages/*": ["pages/*"],
            "@scripts/*": ["scripts/*"],
            "@styles/*": ["styles/*"],
        }
    }
}
